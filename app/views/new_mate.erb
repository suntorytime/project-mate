<div class="container">
<div class="content">

<form method="post" action="/new" class="pure-form">
  <fieldset>
    <legend>Create a mate</legend>
    <label for="first_name">First Name</label>
    <input type="text" name="new[first_name]">
    <label for="last_name">Last Name</label>
    <input type="text" name="new[last_name]">
    <input type="submit" value="Create" class="pure-button pure-button-primary">
  </fieldset>
</form>

<form method="get" action="/mates" class="pure-form">
  <input type="submit" value="Cancel" class="pure-button pure-button-primary">
</form>

</div>
</div>
